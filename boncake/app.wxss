/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
/*通用功能二：灰色分隔块*/
.divider{
  height:30rpx;
  background: #f1f1f1;
}
/*轮播*/
.slider{
  position:relative;
} 
/*轮播*/
.slider swiper,.slider image{
  width:100%;
  height:306px;
}
/*灰色项目条*/
.cell{
  background: #fff;
  font-size:30rpx;
  margin-top:10px;
}
/*灰色下边框*/
.cell-item{
  padding:10rpx 30rpx;
  border-bottom:1rpx solid #ddd;
}
/*通用功能：箭头*/
.arrow{
  display: flex;
  justify-content: space-between;
  align-items: center;
  width:335px;
}
.arrow::after{
  content:"";
  width:15rpx;
  height:15rpx;
  border-top:3rpx solid #ccc;
  border-right:3rpx solid #ccc;
  transform:rotate(45deg);
}
.top{
  margin-top:20px;
}