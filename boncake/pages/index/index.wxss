.title_color{
  font-size: 25rpx;
  color: #696969;
}
.price-section{
  font-size: 30rpx;
  margin-top: 10rpx;
  color: #c19138;
}
/*全部蛋糕*/
.btn{
  width:100%;
  height:80rpx;
  margin-top:10px; 
}
.btn>button{
  font-size:14px;
  background: #ffffff;
  
}
