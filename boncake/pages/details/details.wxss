/* pages/details/details.wxss */
/*在text里加宽高*/
.prc_1,.goods,.bb,.size{
  display:inline-block;
}
.font_color,.tx,.sweetmeats_info{
    padding-left:20px;
}
/*标题颜色*/
.font_color{
  color:#D3B145;
  font-size:28px;
}
/*biaoti*/
.biaoti{
  font-size:14px;
}
/*tx*/
.tx{
  color:#5d5d5d;
}
/*prc*/
.prc{
  color:#da1922;  
}
/*prc_1*/
 .prc_1{
  width:35px;
  height:22px;
  border:1px solid red;
  border-radius:4px;
  margin-left:160px;
  text-align: center;
  line-height:22px;  
}  
/*.sweetmeats_info*/
.sweetmeats_info{
  margin-top:20px;
  line-height: 2
}
/*sweetmeats*/
.sweetmeats>image{
  width:30rpx;
  height:30rpx;
  vertical-align: middle;
}
/*商品简介*/
.goods{
  width:90px;
  height:30px;
  border:1px solid #d3b145;
  border-radius:5px;
  text-align: center;
  letter-spacing:5px;/*字与字之间的距离*/
   vertical-align: middle;
}

/*橘色*/
.sw{
  color:#c19138;
  font-size:14px;
}
.ml{
  margin-left:15px;
  vertical-align: middle;
  color:#5d5d5d;
  font-size:14px;
}
.bb{
  width:100px;
  /* display:inline-block; */ 
  border-bottom:1px solid #d3b145;
   vertical-align: middle;
}
/*底部菜单栏固定*/
.footer_nav{
  width:100%;
  height:50px;
  background: #f8f8f8;
  position:fixed; 
  bottom:0px;
}
.footer_nav>navigator:nth-child(1){
  width:60px;
  height:50px;
  border-right:1px solid #ccc;
  text-align: center;
  padding-top:12px;
}
.footer_nav>navigator image{
  width:50rpx;
  height:50rpx;
}

.dd{
  width:100px;
  height:100%;
  position:absolute;
  top:0px;
  left:150px;
  color:#c19138;
  text-align: center;
  padding:10px;
}
/*弹框*/
.pop-pu{
  width:100%;
  height:279px;
  position:fixed;
  top:307px;
  left:0;
  background:#ffffff;
  line-height:2;
  display:block;
  z-index: 999;
}
.d-none{
  display:none !important;
}
/*遮罩*/
.shade{
  width:100%;
  height:100%;
  border:1px solid transparent;
	position:fixed;
	top:0;
	left:0;
	display: block;
	background-color:rgba(0,0,0,0.2);
}
/*cj*/
.cj{
  font-size:14px;
  color:#808080;
  margin:20px;
}
/*shiyong*/
.shiyong{
  float:right;
  margin-right:30px;
}
/*size*/
.size{
  width:160px;
  height:30px;
  border:1px solid #ccc;
  border-radius:5px;
  text-align: center;
  color:#c19138;  
  margin-top:20px;
}
.size:hover{
  border:1px solid red;
}
/*btn_1*/
.btn_1{
  width:40px;
  height:30px;
  line-height: 1.5;
  float:right;

}
.shopping{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-top:10px;
}
/*cart*/
.cart{
  width:120px;
  display:flex;
}
.cart>input{
  text-align: center;
}
/*确定按钮*/
.btn_3{
  width:100%;
  height:40px;
  border:1px solid transparent;
  border-radius:5px;
  background:#c19138;
  color:#ffffff;
  text-align: center;
 line-height: 2;
 letter-spacing:10px;
 margin-top:20px;
}
/*关闭按钮*/
.open{
  float:right;
  margin-right:10px;
}